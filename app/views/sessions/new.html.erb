<h1>Sign in</h1>

<%= form_tag sessions_path do |form| %>
  <%= alert %></p>
  <div class='form-group'>
    <%= label_tag :username%>
    <%= text_field_tag :username %>
  </div>

  <div class='form-group'>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Sign in", class: 'btn btn-primary' %>
<% end %>
